<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.account.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/hijautosca">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/edited" />

        <TextView
            android:id="@+id/nama1"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_picture"
            android:layout_centerHorizontal="true"
            android:text="Aris Munandar Alfauzi"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama1"
            android:layout_marginTop="2dp"
            android:text="43A87006170174"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relativetengah"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/hijautosca">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_picture2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/egi" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_picture2"
            android:layout_centerHorizontal="true"
            android:text="Egi Kurniawan R.P"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:layout_marginTop="2dp"
            android:text="43A87006170206"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Relativebawah"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/hijautosca">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_picture3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/majid" />

        <TextView
            android:id="@+id/namaEgi"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_picture3"
            android:layout_centerHorizontal="true"
            android:text="Majidul Aziz"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namaEgi"
            android:layout_marginTop="2dp"
            android:text="43A87006170305"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>



</LinearLayout>